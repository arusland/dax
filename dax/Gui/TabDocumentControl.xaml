<UserControl
    x:Class="dax.Gui.TabDocumentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid
                x:Name="gridInputFields"
                Grid.Column="0" />

            <StackPanel
                Grid.Row="1"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">

                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="3,0,3,3"
                    VerticalAlignment="Top">
                    <Hyperlink Click="SelectAll_Cliked">All Inputs</Hyperlink>
                </TextBlock>

                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="3,0,3,3"
                    VerticalAlignment="Top">
                    <Hyperlink Click="SelectNone_Cliked">None Inputs</Hyperlink>
                </TextBlock>

                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="3,0,3,3"
                    VerticalAlignment="Top"
                    ToolTip="Reset all input values">
                    <Hyperlink Click="ResetFilter_Click">Reset Inputs</Hyperlink>
                </TextBlock>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="3,0,3,3"
                    VerticalAlignment="Top">
                    <Hyperlink Click="SelectAllBlocks_Clicked">All Queries</Hyperlink>
                </TextBlock>

                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="3,0,3,3"
                    VerticalAlignment="Top">
                    <Hyperlink Click="SelectNoneBlocks_Clicked">None Queries</Hyperlink>
                </TextBlock>

                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="3,0,3,3"
                    VerticalAlignment="Top">
                    <Hyperlink Click="ResetBlocks_Clicked">Reset Queries</Hyperlink>
                </TextBlock>

            </StackPanel>

            <StackPanel
                Grid.Column="1"
                Grid.RowSpan="3"
                Orientation="Vertical">

                <Button
                    x:Name="buttonReload"
                    Width="80"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="ButtonReload_Click"
                    Content="Reload"
                    ToolTip="Reload file" />

                <Button
                    x:Name="buttonReconnect"
                    Width="80"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="ButtonReconnect_Click"
                    Content="Reconnect"
                    ToolTip="Change connection" />

                <Button
                    x:Name="buttonSearch"
                    Width="80"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="ButtonSearchOrCancel_Click"
                    Content="Search"
                    FontWeight="Bold" />
            </StackPanel>
        </Grid>

        <TabControl
            x:Name="tabControlMain"
            Grid.Row="1" />
    </Grid>
</UserControl>